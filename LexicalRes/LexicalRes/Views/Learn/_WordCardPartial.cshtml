@model List<MeaningViewModel>

<div id="hints" class="w-50">
    <div class="card mt-4 mb-0 align-items-center">
        <button class="btn-hint w-100 text-center">Show Hints <i class="fas fa-lightbulb"></i></button>
    </div>

    <div id="hint-panel" class="card mt-0 mb-2 p-3 border-top-0">
        @foreach (var meaning in Model)
        {
            var examples = meaning.Examples.Take(5);
            foreach (var example in examples)
            {
                <span class="font-weight-light d-block p-2"><i class="far fa-clipboard"></i>&nbsp;&nbsp;@example</span>
            }
        }
    </div>
</div>

<div id="carouselIndicators" class="carousel slide w-50 m-2" data-ride="carousel" data-pause="true">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        @for (int i = 1; i < Model.Count; i++)
        {
            <li data-target="#carouselIndicators" data-slide-to="@i"></li>
        }
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="meaning-card">
                <span class="d-block text-center lead">
                    <i class="fas fa-quote-left"></i>&nbsp;&nbsp;@Model[0].Value&nbsp;&nbsp;<i class="fas fa-quote-right"></i>
                </span>
                <hr class="py-1" />
                @foreach (var example in Model[0].Examples)
                {
                    <span class="d-block font-weight-lighter font-italic text-center">
                        <i class="far fa-clipboard"></i>&nbsp;&nbsp;@example
                    </span>
                }
            </div>
        </div>
        @for (int i = 1; i < Model.Count; i++)
        {
            <div class="carousel-item">
                <div class="meaning-card">
                    <span class="d-block text-center lead">
                        <i class="fas fa-quote-left"></i>&nbsp;&nbsp;@Model[i].Value&nbsp;&nbsp;<i class="fas fa-quote-right"></i>
                    </span>
                    <hr class="py-1" />
                    @foreach (var example in Model[i].Examples)
                    {
                        <span class="d-block font-weight-lighter font-italic text-center">
                            <i class="far fa-clipboard"></i>&nbsp;&nbsp;@example
                        </span>
                    }
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<button id="btn-reveal">Reveal Answer</button>
